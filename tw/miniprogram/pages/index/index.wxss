.bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.content {
  margin: 20rpx;
  overflow: scroll;
}

.mine {
  width: 600rpx;
  background: #1c2438;
  /* height: 400px; */
  margin: 50rpx auto;
  border-radius: 10rpx;
  box-shadow: 10px 10px 5px #dddddd;
  padding: 20rpx;
  color: #fff;
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: auto;
}

.mine-content{
  display: flex;
  flex-direction: row;
  width: 700rpx;
  margin: 30rpx auto;
  color: #fff;
  font-family: Arial, Helvetica, sans-serif;
}

.mine-content view{
  width: 340rpx;
  background: #495060;
  padding: 40rpx;
  text-align: center;
  margin: 10rpx;
  border-radius: 10rpx;
  box-shadow: 5px 5px 2px #dddddd;
}

.close{
  width: 340rpx;
  background: #495060;
  padding: 40rpx;
  text-align: center;
  margin: 10rpx auto;
  border-radius: 10rpx;
  box-shadow: 5px 5px 2px #dddddd;
  color: #fff;
}